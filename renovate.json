{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":enableVulnerabilityAlertsWithLabel(security)",
    "helpers:pinGitHubActionDigests"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "python"
      ],
      "managerFilePatterns": [
        "/(^|/)requirements\\.txt$/",
        "/(^|/)requirements/.*\\.txt$/"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "pinDigests": true
    },
    {
      "groupName": "GitHub Actions dependencies",
      "matchPackageNames": [
        "/^actions//"
      ]
    },
    {
      "matchManagers": [
        "pip_requirements"
      ],
      "groupName": "Python dependencies"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "prPriority": 0
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "schedule": [
    "every weekend"
  ],
  "timezone": "America/New_York",
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "labels": [
    "dependencies"
  ],
  "vulnerabilityAlerts": {
    "labels": [
      "security"
    ],
    "assignees": [
      "@Tokenblkguy83"
    ]
  }
}
